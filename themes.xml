<?xml version="1.0" encoding="UTF-8"?>
<project name="WPR" default="sync" basedir=".">
	<property name="source.dir" location="./dln-themes/"/>
	<property name="dest.dir" location="E:/xampp/htdocs/wordpress/wp-content/themes/dln-theme/"/>

	<!-- ============================================  -->
    <!-- Target: prepare                               -->
    <!-- ============================================  -->
    <target name="prepare">	

	</target>

	<!-- ============================================  -->
	<!-- Target: Build archive for module and plugin   -->
	<!-- ============================================  -->
   <target name="build" depends="prepare">
    </target>
	
	<target name="sync" depends="build">
		
		<copy todir="${dest.dir}" overwrite="true">
			<fileset dir="${source.dir}">
				<include name="**/style.css"/>
				<include name="**/dln-styles.css"/>
				<include name="**/*.php"/>
			</fileset>
		</copy>

	</target>
</project>





